---
interface Props {
	title: string;
	img_url: string;
    href: string;
}

const { title, img_url, href } = Astro.props;
---

<li class="link-card">
	<a href={href}>
        <img src={img_url} alt="leItemPicutreHAHA" />
		<h2>{title}</h2>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 20%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #4c8b46;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
        font-weight: bold;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

    img {
        width: 50%;
        background-color: aliceblue;
        border-radius: 5px;
        padding: 15px;
        margin: 5px;
    }
</style>
